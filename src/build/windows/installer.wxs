<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Id="*" 
           Name="Pioneer CLI Tools" 
           Language="1033" 
           Version="$(var.ProductVersion)" 
           Manufacturer="edu.washu.goldfarblab" 
           UpgradeCode="dfca64a0-7eb6-40db-971c-486154fa6eb0">
    
    <Package InstallerVersion="200" 
             Compressed="yes" 
             InstallScope="perMachine" />
    
    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
    <MediaTemplate EmbedCab="yes" />

    <!-- Display the project license during installation -->
    <WixVariable Id="WixUILicenseRtf" Value="$(var.SourceDir)\LICENSE.rtf" />
    
    <!-- Single feature containing all components -->
    <Feature Id="ProductFeature" Title="Pioneer CLI Tools" Level="1">
      <ComponentGroupRef Id="ProductComponents" />
      <ComponentRef Id="EnvironmentPath" />
    </Feature>

    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFilesFolder">
        <Directory Id="INSTALLFOLDER" Name="Pioneer">
          <Directory Id="ScratchSpacesDir" Name="share\julia\scratchspaces" />
        </Directory>
      </Directory>
    </Directory>

    <Component Id="ScratchSpacesPermissions" Guid="PUT-ANOTHER-GUID-HERE" Directory="ScratchSpacesDir">
      <CreateFolder>
        <util:PermissionEx User="Users" 
                           GenericAll="no" 
                           Modify="yes"
                           Inheritance="containerInherit,objectInherit"
                           AppliesTo="ThisFolderSubdirsAndFiles" />
      </CreateFolder>
      <RemoveFile Id="RemoveScratchSpaces" Name="*" On="uninstall" />
    </Component>
    
    <!-- Add installation directory to PATH -->
    <DirectoryRef Id="INSTALLFOLDER">
      <Component Id="EnvironmentPath" Guid="53903eaf-c9de-4d7f-ac6f-9307b1dbec5e">
        <Environment Id="PATH" 
                     Name="PATH" 
                     Value="[INSTALLFOLDER]" 
                     Permanent="no" 
                     Part="last" 
                     Action="set" 
                     System="yes" />
        <RegistryValue Root="HKLM" 
                       Key="Software\WashU\GoldfarbLab\Pioneer" 
                       Name="version" 
                       Type="string" 
                       Value="$(var.ProductVersion)" 
                       KeyPath="yes"/>
      </Component>
    </DirectoryRef>
    
    <!-- Minimal UI for silent or basic installation -->
    <UIRef Id="WixUI_Minimal" />
    
    <!-- Product information -->
    <Property Id="ARPCOMMENTS" Value="Pioneer command-line tools for data-independent acquisition (DIA) proteomics analysis" />
  </Product>
  
</Wix>
